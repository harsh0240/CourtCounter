<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context="com.example.user.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/score_teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="56sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+3 Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="threePointerA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+2 Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="twoPointerA"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Free Throw"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="freeThrowA"/>

        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#9E9E9E"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/score_teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textSize="56sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+3 Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="threePointerB"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+2 Points"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="twoPointerB"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Free Throw"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:background="@drawable/button_layout"
                android:onClick="freeThrowB"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_layout"
        android:onClick="reset"/>

</RelativeLayout>
